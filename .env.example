# ============================================================
# Example Environment Variables for Keycloak + NextAuth Setup
# Copy this file to `.env` and replace placeholder values with actual values
# ============================================================

# ------------------------------------------------------------
# Keycloak Configuration
# ------------------------------------------------------------

# URL of your Keycloak server (e.g., local Docker or remote)
KEYCLOAK_SERVER_URL=http://keycloak:8080

# The realm you are using in Keycloak
KEYCLOAK_REALM=supervity

# The client ID configured in the Keycloak admin console
KEYCLOAK_CLIENT_ID=super-client-dnh-dev-0001

# The client secret associated with the Keycloak client
# (Retrieve from Keycloak admin console)
KEYCLOAK_CLIENT_SECRET=YOUR_KEYCLOAK_CLIENT_SECRET_HERE

# The expected audience for issued tokens (usually the server URL or client)
KEYCLOAK_AUDIENCE=http://keycloak:8080

# The signing algorithm used by Keycloak (commonly RS256)
KEYCLOAK_ALGORITHM=RS256


# ------------------------------------------------------------
# NextAuth Configuration
# ------------------------------------------------------------

# Secret used by NextAuth for encryption and signing
# Generate one with: `openssl rand -base64 32`
NEXTAUTH_SECRET=YOUR_GENERATED_NEXTAUTH_SECRET_HERE


# ------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------

# The URL of your frontend app (used for CORS and redirects)
FRONTEND_URL=http://localhost:3001/app1


# ------------------------------------------------------------
# Debugging / Logging
# ------------------------------------------------------------

# Set to "true" to enable detailed console logs for the OIDC and NextAuth flow
SUPERVITY_AUTH_DEBUG=true
