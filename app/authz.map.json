{
  "/api/admin.*": { "ALL": ["admin"] },
  "/api/test": {
       "description": "Requires any authenticated user", "ALL": []
  },
  "/api/items.*": {
       "description": "Item CRUD operations - requires any authenticated user", "ALL": []
  },

  "/api/documents/{document_id}": {
    "description": "Scenario 1: Ownership Check", "ANY": [ "admin", { "claims": { "sub": "{context.resource.owner_id}" } }]
  },
  "/api/purchase_orders/approve": {
    "description": "Scenario 2: Data-Driven Limits", "ALL": [ "manager", { "claims_lte": { "approval_limit": "{context.request.amount}" } }]
  },
  "/api/analytics/{region}": {
    "description": "Scenario 3: Hierarchical Constraint", "ALL": [ "regional-manager", { "claims": { "region": "{path.region}" } }]
  },
  "/api/articles/{article_id}/publish": {
    "description": "Scenario 4: Status-Based Transition", "ALL": [ "editor", { "claims": { "{context.resource.status}": "reviewed" } } ]
  },
  "/api/tenants/{tenant_id}/customers": {
    "description": "Scenario 5: Multi-Tenancy Isolation", "ALL": [ { "claims": { "tenant_id": "{path.tenant_id}" } } ]
  },
  "/api/secure-asset": {
    "description": "Scenario 6: Geofencing", "ALL": [ { "claims": { "{context.environment.source_country}": "US" } } ]
  },
  "/api/contractor/access": {
    "description": "Scenario 7: Time-Based Access", "ALL": [ "contractor", { "claims_gte": { "{context.environment.hour_utc}": 9 } }, { "claims_lte": { "{context.environment.hour_utc}": 17 } } ]
  },
  "/api/projects/{project_id}/delete": {
    "description": "Scenario 8: Step-Up Authentication", "ALL": [ "admin", { "claims_timediff_lte": { "mfa_authenticated_at": 300 } } ]
  },
  "/api/files/upload": {
    "description": "Scenario 9: Quota/Usage Limit", "ALL": [ "premium-user", { "claims_lte": { "{context.usage.total_after_upload}": "{user.storage_quota}" } } ]
  },
  "/api/records/{record_id}": {
    "description": "Scenario 10: Relationship-Based Access", "ANY": [ { "claims": { "sub": "{context.resource.patient_id}" } }, { "claims_contains": { "{context.resource.authorized_practitioners}": "{user.sub}" } } ]
  }
}